<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="chart.css">

    <title>Vote System</title>
</head>
<body class="fourth-page-bg" style="background-image : url('<%=image_url('about-bg.jpg')%>'); background-size: cover;">
<section>
    <nav class="navbar navbar-default"  >
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="./index.html">
                    Williston Vote System
                </a>
            </div>
        </div>
    </nav>
</section>
<section>
    <div class="container">
        <div>
            <h1 id="color-white">Class PRESIDENT Candidates</h1>
        </div>
        <% @votes.each do |vote| %>
            <% if vote.cl == 'president' %>
                <div class="media">
                    <div class="media-left">
                        <button type="button" class="btn btn-info btn-lg-chart" data-toggle="modal" data-target="#myModal">
                            <img class="media-object" src="<%= vote.url %>" height="64px"; alt="...">
                        </button>
                    </div>
                    <div class="media-body">
                        <div class="progress">
                            <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: <%= vote.count %>%;">
                                <%= vote.count %>
                            </div>
                        </div>
                    </div>
                </div>
            <% end %>
        <% end %>
    </div>
</section>
<section>
    <div class="container">
        <div>
            <h1 id="color-white">Class PRESIDENT Candidates</h1>
        </div>
        <% @votes.each do |vote| %>
            <% if vote.cl == 'repre' %>
                <div class="media">
                    <div class="media-left">
                        <button type="button" class="btn btn-info btn-lg-chart" data-toggle="modal" data-target="#myModal">
                            <img class="media-object" src="<%= vote.url %>" height="64px"; alt="...">
                        </button>
                    </div>
                    <div class="media-body">
                        <div class="progress">
                            <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: <%= vote.count %>%;">
                                <%= vote.count %>
                            </div>
                        </div>
                    </div>
                </div>
            <% end %>
        <% end %>
    </div>
</section>

<!--Modal-->
<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Peter Seo</h4>
            </div>
            <div class="modal-body">
                <div id="piechart_3d"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>

<div id="chart_div"></div>
</body>
</html>